"""
Power simulations for CLeaR submission
"""
import os

from os.path import join
from nestly.scons import SConsWrap
from nestly import Nest
from SCons.Script import Environment, Command, AddOption
import numpy as np

Import('env')
localenv = env.Clone()

# Set up state
nest = SConsWrap(Nest(), localenv['output'], alias_environment=localenv)

NUM_ADD_ITERS = 65
NUM_SEEDS = 40
NUM_VAR = 2
BATCH_SIZE = 50
DELTA = 0.02
ALPHA = 0.1
PROPENSITY_BETA_DICT = {
    "high": '-6,0,0',
    # "mild": '-2,0,0'
}
PROPENSITY_INTERCEPT = 0
INTERCEPT = -0.5
BETA_DICT = {
    'A0_better': '0.5,0,0,0.5,-1', # a_x_xa
    'avg_same': '0,0,0,0.5,-1'
}
X_SOURCE_MEAN = ",".join(["0"] * NUM_VAR)

nest.add(
    'beta',
    [
        'A0_better',
        # 'avg_same',
    ]
)

nest.add(
    'shift_type',
    [
        'all_shift',
        'sym_small_x_shift',
        'sym_misspec_subG_shift'
    ]
)

nest.add(
    'beta_shift_time',
    [
        10
    ],
    label_func=lambda c: 'shift_time%d' % c
)

nest.add(
    'positivity',
    [
        'high',
    ]
)

nest.add(
    'prob_shift',
    [
        0.1,
        0.2
    ],
    label_func=lambda c: 'prob_shift%.2f' % c
)


nest.add(
    'subG',
    [
        # 0,
        1
    ],
    label_func=lambda c: 'subG%d' % c
)

nest.add(
    'shiftA',
    [
        0,
        1
    ],
    label_func=lambda c: 'shiftA%d' % c
)

@nest.add_target_with_env(localenv)
def generate_data(env, outdir, c):
    targets = [
        join(outdir, 'source_data.csv'),
        join(outdir, 'data_gen.pkl'),
    ]

    cmd = [
        'python',
        'generate_data.py',
        '--data-type',
        'simple',
        '--num-obs',
        10000,
        '--seed-offset',
        0,
        '--beta-shift-time',
        c['beta_shift_time'],
        '--x-mean',
        X_SOURCE_MEAN,
        '--intercept=%.2f' % INTERCEPT,
        '--shift-type',
        c['shift_type'],
        '--shift-A',
        c['shiftA'],
        '--subG',
        c['subG'],
        '--source-beta',
        BETA_DICT[c['beta']],
        '--target-beta',
        BETA_DICT[c['beta']],
        '--prob-shift',
        c['prob_shift'],
        "--propensity-beta=%s" % PROPENSITY_BETA_DICT[c['positivity']],
        '--propensity-intercept=%.2f' % PROPENSITY_INTERCEPT,
        '--out-source-file ${TARGETS[0]}',
        '--out-data-gen ${TARGETS[1]}',
    ]
    return env.Command(
        targets,
        [],
        ' '.join(map(str, cmd)))

@nest.add_target_with_env(localenv)
def train_ml(env, outdir, c):
    targets = [
        join(outdir, 'mdl.pkl'),
        join(outdir, 'mdl_perf.csv'),
        join(outdir, 'log_ml.txt'),
    ]
    cmd = [
        'python train_ml.py',
        '--seed-offset',
        0,
        '--train-frac',
        0.5,
        '--model',
        'RandomForestClassifier',
        '--train-data ${SOURCES[0]}',
        '--data-gen ${SOURCES[1]}',
        '--mdl ${TARGETS[0]}',
        '--perf-csv ${TARGETS[1]}',
        '--log ${TARGETS[2]}',
    ]
    return env.Command(
        targets,
        c['generate_data'],
        ' '.join(map(str, cmd)))

nest.add_aggregate('res_agg', list)
nest.add(
    'seed',
    range(NUM_SEEDS)
)

@nest.add_target_with_env(localenv)
def monitor(env, outdir, c):
    targets = [
        join(outdir, 'log.txt'),
        join(outdir, 'res.csv'),
    ]

    cmd = [
        'python run_script.py',
        localenv['cluster'],
        '${TARGETS[1]}',
        'do_monitor_seq.py',
        '--data-gen ${SOURCES[0]}',
        '--mdl ${SOURCES[1]}',
        '--perf-targets ${SOURCES[2]}',
        '--score-intervene-beta="-2"',
        '--mean-intervene-beta="-2"',
        '--intervene-intercept',
        0,
        '--metrics',
        'npv,ppv',
        '--alternative',
        'less_extreme',
        '--alpha',
        ALPHA,
        '--delta',
        DELTA,
        '--batch-size',
        BATCH_SIZE,
        '--num-iters',
        c['beta_shift_time'] + NUM_ADD_ITERS,
        '--seed-offset',
        c['seed'] + 100,
        '--log-file ${TARGETS[0]}',
        '--out-file ${TARGETS[1]}',
    ]
    c['res_agg'].append(targets[1])
    return env.Command(
        targets,
        [
            c['generate_data'][1],
            c['train_ml'][0],
            c['train_ml'][1],
        ],
        ' '.join(map(str, cmd)))

@nest.add_target_with_env(localenv)
def plot_cusum(env, outdir, c):
    targets = [
        join(outdir, 'plot_cusum.png'),
    ]
    if c['seed'] < 1:
        cmd = [
            'python plot_cusum.py',
            '--res ${SOURCES[1]}',
            '--batch-size',
            BATCH_SIZE,
            '--plot-file ${TARGETS[0]}',
        ]
        return env.Command(
            targets,
            c['monitor'],
            ' '.join(map(str, cmd)))

nest.pop('seed')

@nest.add_target_with_env(localenv)
def aggregate(env, outdir, c):
    targets = [
        join(outdir, 'plot_power.png'),
        join(outdir, 'aggregate.csv'),
        join(outdir, 'agg_log.txt'),
    ]
    res_files = ','.join([join('simulation_clear_power', f) for f in c['res_agg']])

    cmd = [
        'python plot_simulation_estimands.py',
        '--omit-naive',
        '--max-time',
        c['beta_shift_time'] + NUM_ADD_ITERS,
        '--shift-time',
        c['beta_shift_time'],
        '--batch-size',
        BATCH_SIZE,
        '--result',
        res_files,
        '--plot ${TARGETS[0]}',
        '--csv-file ${TARGETS[1]}',
        '--log-file ${TARGETS[2]}',
    ]
    return env.Command(
        targets,
        c['res_agg'],
        ' '.join(map(str, cmd)))
